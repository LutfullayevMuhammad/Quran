        <TextView
            android:id="@+id/ayah_number"
            android:layout_width="55dp"
            android:layout_height="0dp"
            android:layout_marginStart="7dp"
            android:background="@drawable/ayah_number_back"
            android:gravity="center"
            android:textColor="#004D40"
            android:textSize="15sp"
            app:layout_constraintDimensionRatio="1:0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="10:286" />

        <TextView
            android:id="@+id/ayah_arabic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#004D40"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ayah_number"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="خَتَمَ ٱللَّهُ عَلَىٰ قُلُوبِهِمْ وَعَلَىٰ سَمْعِهِمْ ۖ وَعَلَىٰٓ أَبْصَـٰرِهِمْ غِشَـٰوَةٌ ۖ وَلَهُمْ عَذَابٌ عَظِيمٌِِ" />

        <TextView
            android:id="@+id/ayah_translations"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:textColor="#004D40"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ayah_arabic"
            tools:text="Во имя Аллаха, Милостивого, Милосердного!" />

